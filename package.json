{
  "name": "wp-hmr-theme",
  "version": "1.0.0",
  "description": "A blank WordPress Theme with SASS, TypeScript and Hot Module Replacement (HMR) support",
  "author": "Lluís Ulzurrun de Asanza i Sàez",
  "license": "MIT",
  "homepage": "https://github.com/Sumolari/wp-hmr-theme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sumolari/wp-hmr-theme.git"
  },
  "scripts": {
    "postinstall": "composer install",
    "start": "run-s build start:docker start:vite",
    "start:docker": "VITE_DEV_SERVER_ADDRESS=http://$(sh bin/get-host-ip-address.sh):1337 docker compose up -d",
    "start:vite": "vite dev",
    "build": "vite build",
    "clean": "del-cli theme/js/**/* theme/style.css",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:php": "composer run lint:php",
    "lint:wpcs": "composer run lint:wpcs-all",
    "lint:purpose": "purposefile --ignore '**/node_modules/**' --ignore '**/vendor/**'",
    "lint:shell": "shellcheck -x bin/*.sh",
    "fix:prettier": "prettier -w .",
    "fix:wpcs": "composer run fix:wpcs-all"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.14",
    "@types/node": "^18.11.9",
    "@types/react": "17.0.2",
    "@types/wordpress__block-editor": "^7.0.0",
    "@types/wordpress__blocks": "^11.0.9",
    "@types/wordpress__i18n": "^3.11.0",
    "@types/wordpress__rich-text": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@wordpress/block-editor": "^10.5.0",
    "@wordpress/blocks": "^11.21.0",
    "@wordpress/i18n": "^4.22.0",
    "@wordpress/rich-text": "^5.20.0",
    "classnames": "^2.3.2",
    "dir-archiver": "^2.1.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "purposefile": "^1.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.56.1",
    "shellcheck": "^1.1.0",
    "typescript": "^4.8.4",
    "vite": "^4.0.3",
    "yarn-deduplicate": "^6.0.0"
  }
}
